{
  "name": "@Alae-Eddine-Akesbi/mcp-selenium",
  "version": "0.1.22",
  "description": "Selenium WebDriver MCP Server",
  "type": "module",
  "main": "server.js",
  "bin": {
    "mcp-selenium": "./server.js",
    "mcp-selenium-http": "./http-server.js"
  },
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "start": "node server.js",
    "start:http": "node http-server.js",
    "dev": "node --watch http-server.js",
    "debug": "DEBUG=* node http-server.js",
    "install-drivers": "npm install chromedriver geckodriver --save-dev",
    "postinstall": "npm run install-drivers || echo 'Warning: Could not install drivers automatically'"
  },
  "keywords": [
    "mcp",
    "selenium",
    "browser",
    "automation",
    "n8n",
    "webdriver"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.17.2",
    "cors": "^2.8.5",
    "express": "^5.1.0",
    "selenium-webdriver": "^4.18.1",
    "zod": "^3.24.2"
  },
  "devDependencies": {
    "chromedriver": "^139.0.1",
    "geckodriver": "^5.0.0"
  },
  "engines": {
    "node": ">=18"
  }
}
